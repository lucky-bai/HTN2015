{
  "manifest_version": 2,

  "name": "Sleep Guardian",
  "description": "This extension will track your sleep",
  "version": "1.0",
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
   "default_icon": "img/icon16.png",
   "default_popup": "sleepguardian.html"
  },
  "permissions": [
   "http://www.sleepguardian.co/*",
   "activeTab",
   "idle",
   "history",
   "alarms"
   ]
}