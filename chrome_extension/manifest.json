{
  "manifest_version": 2,

  "name": "Sleep Guardian",
  "description": "This extension will track your sleep",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "sleepguardian.html"
  },
  "permissions": [
   "http://www.sleepguardian.co/*",
   "activeTab",
   "idle",
   "history"
   ]
}